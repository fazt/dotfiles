#!/bin/bash
# Extract any compressed file
set -e

if [ -z "$1" ]; then
  echo "Usage: extract <file>"
  exit 1
fi

case "$1" in
  *.tar.bz2) tar xjf "$1" ;;
  *.tar.gz)  tar xzf "$1" ;;
  *.tar.xz)  tar xJf "$1" ;;
  *.bz2)     bunzip2 "$1" ;;
  *.gz)       gunzip "$1" ;;
  *.tar)     tar xf "$1" ;;
  *.tbz2)    tar xjf "$1" ;;
  *.tgz)     tar xzf "$1" ;;
  *.zip)     unzip "$1" ;;
  *.7z)      7z x "$1" ;;
  *.rar)     unrar x "$1" ;;
  *)         echo "Cannot extract '$1'" ;;
esac
